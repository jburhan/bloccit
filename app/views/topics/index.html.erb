<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">

    <% @topics.each do |topic| %>
      <%= render partial: 'topics/topic', locals: {topic: topic} %>
      <%= topic.posts.count %> posts
    <% end %>
  </div>
  <% if current_user && user_is_admin? %>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
