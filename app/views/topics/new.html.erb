<h1>New Topic</h1>

<div class="new-row">
  <div class="guidelines">
    <h2> Guidelines for posting on Bloccit </h2>
    <ul>
      <li> Freedom of speech does not mean freedom of consequences.</li>
      <li> BNBR. Be nice be respectful to your fellow posters </li>
    </ul>
  </div>

  <div class="new-post">
    <%= form_for @topic do |t| %>
      <div class="form-group">
        <%= t.label :name %>
        <%= t.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
      </div>
      <div class="form-group">
        <%= t.label :description %>
        <%= t.text_area :description, rows: 7, class: 'form-control', placeholder: "Enter topic description" %>
      </div>
      <div class="form-group">
        <%= t.label :public, class: 'checkbox' do %>
          <%= t.check_box :public %> Public topic
        <% end %>
      </div>
      <%= t.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
