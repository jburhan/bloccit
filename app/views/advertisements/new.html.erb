<div class="new-ads">
  <p>Describe your product or service below.</p>
  <%= form_for @advertisement do |ads| %>

    <div class="form-group">
      <%= ads.label :title %>
      <%= ads.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
    </div>

    <div class="form-group">
      <%= ads.label :price %>
      <%= ads.text_area :price, class: 'form-control', placeholder: "Enter price" %>
    </div>

    <div class="form-group">
      <%= ads.label :copy %>
      <%= ads.text_area :copy, rows: 7, class: 'form-control', placeholder: "Enter ad body" %>
    </div>

    <div class="form-group">
      <%= ads.submit "Save", class: 'btn btn-success' %>
    </div>

  <% end %>
</div>
