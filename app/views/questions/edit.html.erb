<div class="new-row">
  <div class="guidelines">
    <h2> Guidelines for posting on Bloccit </h2>
    <ul>
      <li> Freedom of speech does not mean freedom of consequences.</li>
      <li> BNBR. Be nice be respectful to your fellow posters </li>
    </ul>
  </div>

  <div class="new-post">
    <%= form_for @question do |q| %>
      <div class="form-group">
        <%= q.label :title %>
        <%= q.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
      </div>

      <div class="form-group">
        <%= q.label :body %>
        <%= q.text_area :body, rows: 3, class: 'form-control', placeholder: "Enter question body" %>
      </div>

      <div class="form-group">
         Resolved? <%= q.check_box :resolved %>
      </div>

      <div class="form-group">
        <%= q.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

</div>
