
<%= form_for [topic, post] do |p| %>

  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4> <%= pluralize(post.errors.count, "error") %>.</h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul
    </div>
  <% end %>

  <%= form_group_tag(post.errors[:title]) do %>

    <%= p.label :title %>
    <%= p.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
  <% end %>

  <%= form_group_tag(post.errors[:body]) do %>
    <%= p.label :body %>
    <%= p.text_area :body, rows: 7, class: 'form-control', placeholder: "Enter post body" %>
  <% end %>

  <div class="form-group">
    <%= p.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>
