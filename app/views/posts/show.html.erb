<%= render partial: 'posts/post', locals: { post: @post } %>

<div class="new-post">
  <div class="form-group">
    <p><%= @post.body %></p>
    <div>
      <h3>Comments</h3>
      <%= render @post.comments %>
    </div>
    <% if current_user %>
      <%= render 'comments/form', comment: Comment.new, post: @post %>
    <% end %>
  </div>
  <% if user_can_edit?(@post) %>
    <div class="edit-post">
      <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
    <div>
  <% end %>
  <% if user_can_delete?(@post) %>
     <div class="edit-post">
      <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: "You are about to delete this post, proceed?"} %>
    </div>
  <% end %>
</div>
