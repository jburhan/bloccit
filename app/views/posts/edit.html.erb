<div class="new-row">
  <div class="guidelines">
    <h2> Guidelines for posting on Bloccit </h2>
    <ul>
      <li> Freedom of speech does not mean freedom of consequences.</li>
      <li> BNBR. Be nice be respectful to your fellow posters </li>
    </ul>
  </div>

  <div class="new-post">
    <%= form_for [@post.topic, @post] do |post| %>
      <div class="form-group">
        <%= post.label :title %>
        <%= post.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
      </div>

      <div class="form-group">
        <%= post.label :body %>
        <%= post.text_area :body, rows: 7, class: 'form-control', placeholder: "Enter post body" %>
      </div>

      <div class="form-group">
        <%= post.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

</div>
